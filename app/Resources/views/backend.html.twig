{% extends '::base.html.twig' %}

{% block stylesheets %}
<link href="{{ asset('bundles/oferta/css/normalizar.css') }}"
    rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/oferta/css/comun.css') }}"
    rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/backend/css/backend.css') }}"
    rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
<header>
    <h1><a href="{{ path('backend_portada') }}">CUPON ADMIN</a></h1>
    <nav>
        <ul>
            <li><a href="{{ path('backend_oferta') }}">Ofertas</a></li>
            <li><a href="{# {{ path('backend_tienda') }} #}">Tiendas</a></li>
            <li><a href="{# {{ path('backend_usuario') }} #}">Usuarios</a></li>
            <li><a href="{{ path('backend_ciudad') }}">Ciudades</a></li>
            <li>{{ render(controller('CiudadBundle:Default:listaCiudades', {
                'ciudad': app.session.get('ciudad')})) }}</li>
        </ul>
    </nav>
</header>
        
<article>
    {% block article %}{% endblock %}
</article>
{% endblock %}
