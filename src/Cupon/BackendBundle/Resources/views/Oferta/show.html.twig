{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Oferta</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
            <tr>
                <th>Condiciones</th>
                <td>{{ entity.condiciones }}</td>
            </tr>
            <tr>
                <th>Rutafoto</th>
                <td>{{ entity.rutaFoto }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ entity.precio }}</td>
            </tr>
            <tr>
                <th>Descuento</th>
                <td>{{ entity.descuento }}</td>
            </tr>
            <tr>
                <th>Fechapublicacion</th>
                <td>{{ entity.fechaPublicacion|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fechaexpiracion</th>
                <td>{{ entity.fechaExpiracion|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Compras</th>
                <td>{{ entity.compras }}</td>
            </tr>
            <tr>
                <th>Umbral</th>
                <td>{{ entity.umbral }}</td>
            </tr>
            <tr>
                <th>Revisada</th>
                <td>{{ entity.revisada }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('backend_oferta') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('backend_oferta_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
